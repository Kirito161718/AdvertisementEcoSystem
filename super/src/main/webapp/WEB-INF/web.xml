<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- 欢迎页面 -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- 配置数据源 -->
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/shopDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <!-- Servlet配置 -->
    <!-- 用户相关 -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.shop.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.shop.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <!-- 商品分类相关 -->
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.shop.servlet.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    
    <!-- 商品相关 -->
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.shop.servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    
    <!-- 浏览记录相关 -->
    <servlet>
        <servlet-name>ViewRecordServlet</servlet-name>
        <servlet-class>com.shop.servlet.ViewRecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewRecordServlet</servlet-name>
        <url-pattern>/record</url-pattern>
    </servlet-mapping>
</web-app>